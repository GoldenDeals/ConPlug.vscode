{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["{", "}"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["(", ")"],
        ["[", "]"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["(", ")"],
        ["[", "]"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*[a-zA-Z0-9_\\-]+(?::\\s*[a-zA-Z0-9_\\-,\\s]+)?\\s*{",
            "end": "^\\s*}"
        }
    }
} 